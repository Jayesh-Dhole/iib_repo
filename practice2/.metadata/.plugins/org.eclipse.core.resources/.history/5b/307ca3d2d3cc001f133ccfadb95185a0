CREATE COMPUTE MODULE CHANNEL_TO_HOST_Compute
	CREATE FUNCTION Main() RETURNS BOOLEAN
	BEGIN
		-- CALL CopyMessageHeaders();
		CALL CopyEntireMessage();
		RETURN TRUE;
	END;

	CREATE PROCEDURE CopyEntireMessage() BEGIN
		DECLARE inblob BLOB;
		DECLARE inchar CHARACTER;
		
		DECLARE APP_NAME CHARACTER '06-01-24-DatabaseLogging_1160';
		DECLARE MSG_FLOW_NAME CHARACTER 'CHANNEL_TO_HOST';
		DECLARE LOG_POINT CHARACTER 'ESB_REQUEST';
		DECLARE CREATION_TIME TIMESTAMP CURRENT_TIMESTAMP;
		
		
		DECLARE inref REFERENCE TO InputRoot.XMLNSC;
		SET inblob = ASBITSTREAM(inref CCSID InputRoot.Properties.CodedCharSetId ENCODING InputRoot.Properties.Encoding);
        SET inchar = CAST(inblob as CHARACTER CCSID InputRoot.Properties.CodedCharSetId ENCODING InputRoot.Properties.Encoding);
        DECLARE PAYLOAD CHARACTER;
        SET PAYLOAD = inchar;
        
        CALL LOG_INSERT(LOG_POINT,APP_NAME,MSG_FLOW_NAME,PAYLOAD,CREATION_TIME);
        
        SET OutputRoot = InputRoot;
	END;
END MODULE;

CREATE PROCEDURE LOG_INSERT (IN LOG_POINT CHARACTER,IN APP_NAME CHARACTER, IN MSG_FLOW_NAME CHARACTER, IN PAYLOAD CHARACTER, IN CREATION_TIME TIMESTAMP )
LANGUAGE DATABASE
EXTERNAL NAME proc_db_logging_table;